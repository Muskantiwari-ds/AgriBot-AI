# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/agribot
DATABASE_ECHO=false

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Database
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# External APIs
WEATHER_API_KEY=your_weather_api_key_here
IMD_API_BASE=https://mausam.imd.gov.in/imd_latest/contents/api
AGMARKNET_API=https://agmarknet.gov.in/SearchCmmMkt.aspx

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]

# File Upload
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application Settings
APP_NAME=AgriBot AI
VERSION=1.0.0
DEBUG=false

# Language Support
SUPPORTED_LANGUAGES=["hi", "en", "ta", "te", "bn", "mr", "gu", "kn", "ml", "pa", "ur"]

# Data Directories
DATA_DIRECTORY=./data
DATASETS_DIRECTORY=./data/datasets

# Production Settings (uncomment for production)
# DATABASE_URL=postgresql://username:password@your-db-host:5432/agribot_prod
# REDIS_URL=redis://your-redis-host:6379
# DEBUG=false
# ALLOWED_ORIGINS=["https://yourdomain.com"]